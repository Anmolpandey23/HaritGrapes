rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Each user can access ONLY their own subtree
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /profile/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /scans/{scanId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /yield/{yieldId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /fertilizer/{fertilizerId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Allow ANYONE to submit a support/contact form
    match /support_contacts/{contactId} {
      allow create: if true;   // anyone can submit
      allow read, update, delete: if false; // no one can read or change submissions publicly
    }

    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
